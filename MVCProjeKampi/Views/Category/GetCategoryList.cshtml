@using EntityLayer.Concrete
@model List<Category>
@{
    Layout = null;
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<br />
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Name
            </th>
            <th>
                IsActive
            </th>
            <th>
                CreateDate
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryId</td>
                <td>@item.Name</td>
                <td>@item.IsActive</td>
                <td>@item.CreateDate</td>
            </tr>
        }
    </tbody>
</table>

<br />
<a href="/Category/AddCategory" class="btn btn-info" alt="Yeni Kategori Ekleme">Yeni Kategori</a>