@using EntityLayer.Concrete
@model List<Heading>
@{
    ViewBag.Title = "HeadingByWriter";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<section class="content">
    <div class="container-fluid">
        <!-- Timelime example  -->
        <div class="row">
            <div class="col-md-12">
                <!-- The time line -->
                <div class="timeline">
                    @foreach (var item in Model)
                    {
                        <!-- timeline time label -->
                        <div class="time-label">
                            <span class="bg-success">@(((DateTime)item.CreateDate).ToString("dd-MMM-yyyy"))</span>
                        </div>
                        <!-- /.timeline-label -->
                        <!-- timeline item -->
                        <div>
                            <i class="fas fa-comment bg-yellow"></i>
                            <div class="timeline-item">
                                <h3 class="timeline-header"><a href="#">@item.Category.Name</a></h3>
                                <div class="timeline-body">
                                    @item.Name
                                </div>
                            </div>
                        </div>
                        <!-- END timeline item -->
                    }
                </div>
            </div>
            <!-- /.col -->
        </div>
    </div>
    <!-- /.timeline -->
</section>
<!-- /.content -->
